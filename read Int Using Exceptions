def readint(prompt, mn, mx):
    
    while True:
        
        try:
            val = int(input(prompt))
        except ValueError:
            print("Wrong input...Please enter a valid number...")
            continue
        except:
            print("Wrong input...Please enter a valid number...")
            continue
        
        if val>=-10 and val<=10:
            return val
        else:
            print("Wrong input...Please enter a valid number...")
        
        


v = readint("Enter a number from -10 to 10: ", -10, 10)

print("The number is:", v)
